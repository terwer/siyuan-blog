    "lint": "eslint \"src/**/*.{ts,js}\" --fix"
  },
  "devDependencies": {
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.15.11",
    "esbuild": "^0.16.9",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-plugin-d.ts": "^1.1.0",
    "eslint-config-custom": "workspace:*",
    "minimist": "^1.2.8",
    "ts-node": "^10.9.1",
    "tsconfig": "workspace:*"
  }
}
