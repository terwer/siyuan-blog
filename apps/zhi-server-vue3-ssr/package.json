{
  "name": "zhi-server-vue3-ssr",
  "version": "0.1.0",
  "type": "module",
  "description": "a ssr blog using vue3 and esbuild",
  "repository": "terwer/zhi",
  "homepage": "https://github.com/terwer/zhi/tree/main/apps/zhi-server-vue3-ssr",
  "author": "terwer",
  "license": "GPL",
  "keywords": [
    "vue3",
    "ssr",
    "zhi",
    "blog"
  ],
  "scripts": {
    "dev": "pnpm clientDev",
    "nodeDev": "nodemon ./dist/node-start.mjs",
    "clientDev": "zhi-build -c esbuild.client.config.mjs --watch --outDir=/Users/terwer/Documents/mydocs/SiYuanWorkspace/public/conf/appearance/themes/zhi/dynamic/blog",
    "build": "pnpm clientBuild && pnpm serverBuild",
    "localBuild": "pnpm localClientBuild && pnpm localServerBuild",
    "nodeBuild": "pnpm clientBuild && pnpm nodeServerBuild",
    "clientBuild": "zhi-build -c esbuild.client.config.mjs --production",
    "localClientBuild": "zhi-build -c esbuild.client.config.mjs --production --outDir=/Users/terwer/Documents/mydocs/SiYuanWorkspace/public/conf/appearance/themes/zhi/dynamic/blog",
    "serverBuild": "zhi-build -c esbuild.server.config.mjs --production",
    "nodeServerBuild": "zhi-build -c esbuild.node.config.mjs --production",
    "localServerBuild": "zhi-build -c esbuild.server.config.mjs --production --outDir=/Users/terwer/Documents/mydocs/SiYuanWorkspace/public/conf/appearance/themes/zhi/dynamic/blog",
    "start": "node dist/server/server.js",
    "test": "jest --coverage=true --coverageDirectory=../../reports/test/zhi-server-vue3-ssr",
    "lint": "eslint 'src/**/*.{ts,js}' --fix",
    "doc": "../../packages/api-docs/node_modules/.bin/api-extractor run --local --verbose",
    "md": "../../packages/api-docs/node_modules/.bin/api-documenter markdown -i temp -o ../zhi-docs/src/api/zhi-server-vue3-ssr && pnpm mdfix",
    "mdfix": "pnpm mdfmt && rm ../zhi-docs/src/api/zhi-server-vue3-ssr/index.md",
    "mdfmt": "echo '---\ntitle: zhi-server-vue3-ssr\n---' | cat - ../zhi-docs/src/api/zhi-server-vue3-ssr/index.md > ../zhi-docs/src/api/zhi-server-vue3-ssr/README.md"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.191",
    "@chialab/esbuild-plugin-alias": "^0.17.2",
    "@iconify/json": "^2.2.51",
    "@terwer/esbuild-plugin-vue3": "workspace:*",
    "@types/good-storage": "^1.1.0",
    "api-docs": "workspace:*",
    "esbuild-config-custom": "workspace:*",
    "eslint-config-custom": "workspace:*",
    "node-fetch": "^3.3.1",
    "nodemon": "^2.0.22",
    "tsconfig": "workspace:*",
    "unplugin-icons": "^0.16.1",
    "vitest-config-custom": "workspace:*"
  },
  "dependencies": {
    "express": "^4.18.2",
    "good-storage": "^1.1.1",
    "lodash": "^4.17.21",
    "vue": "^3.2.47",
    "vue-instantsearch": "4.8.7",
    "vue-router": "^4.1.6",
    "zhi-blog-api": "workspace:*",
    "zhi-common": "workspace:*",
    "zhi-device": "workspace:*",
    "zhi-env": "workspace:*",
    "zhi-log": "workspace:*",
    "zhi-siyuan-api": "workspace:*"
  }
}
