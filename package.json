{
  "name": "zhi",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "turbo run lint",
    "dev": "turbo run dev",
    "siyuanBuild": "turbo run siyuanBuild",
    "build": "turbo run build",
    "preview": "turbo run preview",
    "doc": "turbo run doc",
    "md": "turbo run md",
    "apidev": "pnpm build && pnpm doc && pnpm md && turbo run apidev --filter zhi-docs",
    "apibuild": "pnpm build && pnpm doc && pnpm md && turbo run apibuild --filter zhi-docs",
    "prepare": "is-ci || husky install",
    "commitinit": "npx husky add .husky/commit-msg  'npx --no -- commitlint --edit ${1}'",
    "cz": "git-cz",
    "commit": "commit"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    },
    "commitizenEmoji": {}
  },
  "devDependencies": {
    "turbo": "^1.9.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@8.1.1"
}
