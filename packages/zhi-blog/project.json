{
    "name": "zhi-blog",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/zhi-blog/src",
    "projectType": "application",
    "targets": {
        "build": {
            "executor": "@nrwl/webpack:webpack",
            "outputs": ["{options.outputPath}"],
            "defaultConfiguration": "production",
            "options": {
                "target": "node",
                "compiler": "tsc",
                "outputPath": "dist/packages/zhi-blog",
                "main": "packages/zhi-blog/src/main.ts",
                "tsConfig": "packages/zhi-blog/tsconfig.app.json",
                "assets": ["packages/zhi-blog/src/assets"],
                "isolatedConfig": true,
                "webpackConfig": "packages/zhi-blog/webpack.config.js"
            },
            "configurations": {
                "development": {},
                "production": {
                    "generateLockfile": true
                }
            }
        },
        "serve": {
            "executor": "@nrwl/js:node",
            "defaultConfiguration": "development",
            "options": {
                "buildTarget": "zhi-blog:build"
            },
            "configurations": {
                "development": {
                    "buildTarget": "zhi-blog:build:development"
                },
                "production": {
                    "buildTarget": "zhi-blog:build:production"
                }
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["packages/zhi-blog/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "packages/zhi-blog/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        },
        "docker-build": {
            "dependsOn": ["build"],
            "command": "docker build -f packages/zhi-blog/Dockerfile . -t zhi-blog"
        }
    },
    "tags": []
}
