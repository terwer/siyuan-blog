# Run the container with `docker run -p 3000:3000 -t zhi-blog`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system zhi-blog && \
          adduser --system -G zhi-blog zhi-blog

COPY dist/packages/zhi-blog zhi-blog
RUN chown -R zhi-blog:zhi-blog .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix zhi-blog --omit=dev -f install

CMD [ "node", "zhi-blog" ]
