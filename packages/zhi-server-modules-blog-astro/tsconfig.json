{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "importHelpers": false,
        "target": "esnext",
        "module": "esnext",
        "lib": ["es2020", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",

        "paths": {
            // base
            "zhi-blog-api": ["packages/zhi-blog-api/src/index.ts"],
            "zhi-cli": ["packages/zhi-cli/src/index.ts"],
            "zhi-common": ["packages/zhi-common/src/index.ts"],
            "zhi-env": ["packages/zhi-env/src/index.ts"],
            "zhi-log": ["packages/zhi-log/src/index.ts"],
            "zhi-sdk": ["packages/zhi-sdk/src/index.ts"],
            "zhi-siyuan-api": ["packages/zhi-siyuan-api/src/index.ts"],

            // project
            "@components/*": ["packages/zhi-server-modules-blog-astro/src/components/*"],
            "@assets/*": ["packages/zhi-server-modules-blog-astro/src/assets/*"],
            "@utils/*": ["packages/zhi-server-modules-blog-astro/src/utils/*"],
            "@layouts/*": ["packages/zhi-server-modules-blog-astro/src/layouts/*"],
            "@pages/*": ["packages/zhi-server-modules-blog-astro/src/pages/*"],
            "@src/*": ["packages/zhi-server-modules-blog-astro/src/*"]
        }
    }
}
