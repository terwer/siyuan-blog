{
    "name": "zhi-modules-blog-middleware",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/zhi-modules-blog-middleware/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nrwl/vite:build",
            "outputs": ["{options.outputPath}"],
            "options": {
                // "outputPath": "dist/packages/zhi-modules-blog-middleware",
                "outputPath": "../SiYuanWorkspace/public/conf/appearance/themes/zhi/modules-web/blog-middleware"
            }
        },
        "publish": {
            "executor": "nx:run-commands",
            "options": {
                "command": "node tools/scripts/publish.mjs zhi-modules-blog-middleware {args.ver} {args.tag}"
            },
            "dependsOn": ["build"]
        },
        "test": {
            "executor": "@nrwl/vite:test",
            "outputs": ["coverage/packages/zhi-modules-blog-middleware"],
            "options": {
                "passWithNoTests": true,
                "reportsDirectory": "../../coverage/packages/zhi-modules-blog-middleware"
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["packages/zhi-modules-blog-middleware/**/*.ts"]
            }
        }
    },
    "tags": []
}
