{
  "name": "zhi-plugin-code-block",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/zhi-plugin-code-block/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        // "outputPath": "dist/packages/zhi-code-block"
        "outputPath": "/Users/terwer/Documents/mydocs/SiYuanWorkspace/public/data/plugins/zhi-code-block"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs zhi-plugin-code-block {args.ver} {args.tag}"
      },
      "dependsOn": ["build"]
    },
    "test": {
      "executor": "@nrwl/vite:test",
      "outputs": ["coverage/packages/zhi-plugin-code-block"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/zhi-plugin-code-block"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/zhi-plugin-code-block/**/*.ts"]
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx run zhi-plugin-code-block:build --watch"
      },
      "dependsOn": []
    }
  },
  "tags": []
}
